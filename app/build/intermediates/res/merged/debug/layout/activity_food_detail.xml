<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background_02"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_layout_bottom_height"
        android:background="@color/primary_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/app_button_top_width_height1"
            android:layout_height="@dimen/app_button_top_width_height1"
            android:layout_marginLeft="@dimen/app_margin_small"
            android:background="@drawable/ic_backs" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/app_margin_small"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cl_white"
                android:textSize="@dimen/text_normal_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblMenuName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/app_margin_small"
                android:textColor="@color/cl_white"
                android:textSize="@dimen/text_small_size" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnAddToMenu"
            android:layout_width="@dimen/app_button_top_width_height1"
            android:layout_height="@dimen/app_button_top_width_height1"
            android:layout_marginRight="@dimen/app_margin"
            android:background="@drawable/ic_add_cart" />
    </LinearLayout>


    <ListView
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:id="@+id/lsv_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlt_bottom"
        android:layout_below="@+id/layoutHeader"
        android:divider="@null"
        android:scrollbars="none" />

    <RelativeLayout
        android:id="@+id/rlt_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_layout_bottom_height"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblReviewNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_margin"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_normal_size" />

        <com.hcpt.multirestaurant.widget.AutoBgButton
            android:id="@+id/btnAddReview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_button_top_width_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_margin"
            android:background="@drawable/bg_button"
            android:paddingLeft="@dimen/app_margin"
            android:paddingRight="@dimen/app_margin"
            android:text="@string/add_review"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_normal_size" />
    </RelativeLayout>

