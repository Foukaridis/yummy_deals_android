<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background_02"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_layout_bottom_height"
        android:background="@color/primary_dark"
        android:orientation="horizontal" >

        <com.hcpt.multirestaurant.widget.AutoBgButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/app_button_top_width_height1"
            android:layout_height="@dimen/app_button_top_width_height1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_margin"
            android:background="@drawable/ic_backs" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lblShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/app_margin"
                android:text="@string/myMenu"
                android:textColor="@color/cl_white"
                android:textSize="@dimen/text_normal_size"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/app_layout_bottom_height"
        android:layout_marginTop="@dimen/app_layout_bottom_height" >

        <ListView
            android:id="@+id/lsvFood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/app_margin"
            android:divider="@null"
            android:dividerHeight="0dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_layout_bottom_height1"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/app_margin"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/app_margin_large"
            android:layout_marginRight="@dimen/app_margin_large"
            android:background="@color/cl_white" />

        <com.hcpt.multirestaurant.widget.AutoBgButton
            android:id="@+id/btnOrder"
            android:layout_width="@dimen/btn_login_width"
            android:layout_height="@dimen/app_button_top_width_height"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/app_margin"
            android:layout_marginLeft="@dimen/app_margin"
            android:background="@drawable/bg_button"
            android:text="@string/order"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_normal_size" />

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/app_margin_small"
            android:layout_marginLeft="@dimen/app_margin"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/lblVAT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="VAT"
                android:textColor="@color/cl_white" />

            <TextView
                android:id="@+id/lblShip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:text="Ship"
                android:textColor="@color/cl_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_margin"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sum"
                android:textColor="@color/cl_white"
                android:textSize="@dimen/text_normal_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_margin"
                android:textColor="@color/yellow"
                android:textSize="@dimen/text_normal_size" />
        </LinearLayout>
    </RelativeLayout>

