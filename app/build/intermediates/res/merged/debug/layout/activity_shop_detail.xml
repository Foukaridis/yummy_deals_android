<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background_02"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_layout_bottom_height"
        android:background="@color/primary_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/app_button_top_width_height1"
            android:layout_height="@dimen/app_button_top_width_height1"
            android:layout_marginLeft="@dimen/app_margin_small"
            android:background="@drawable/ic_backs" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/app_margin_small"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="@dimen/app_margin"
                android:text="shop 1"
                android:textColor="@color/cl_white"
                android:textSize="@dimen/text_normal_size"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/btnPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phoneNumber"
                    android:textColor="@color/cl_white" />

                <ImageView
                    android:layout_width="@dimen/app_button_small"
                    android:layout_height="@dimen/app_button_small"
                    android:layout_marginLeft="@dimen/app_margin_small"
                    android:background="@drawable/ic_phone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutMap"
            android:layout_width="match_parent"
            android:layout_height="@dimen/banner_height"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/app_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/rtbRating"
                style="@style/CustomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:isIndicator="true"
                android:max="5"
                android:numStars="5"
                android:progress="0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_margin"
            android:layout_marginBottom="@dimen/app_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnMenu"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_login_height"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:gravity="center"
                android:text="@string/menus"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_normal_size" />


            <TextView
                android:id="@+id/btnTimeable"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_login_height"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:gravity="center"
                android:text="@string/open_hours"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_normal_size" />

            <TextView
                android:id="@+id/btnMap"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_login_height"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:gravity="center"
                android:text="@string/location"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_normal_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnReport"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_login_height"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:gravity="center"
                android:text="@string/report"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_normal_size" />

            <TextView
                android:id="@+id/btnContact"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_login_height"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:gravity="center"
                android:text="@string/contact"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_normal_size" />

            <TextView
                android:id="@+id/btnViewComment"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_login_height"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_normal_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutOffers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblBestDealAround"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin"
            android:text="Best deals around 12"
            android:textColor="@color/cl_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/app_margin_small"
            android:background="@color/text_shadow_1">

            <com.hcpt.multirestaurant.widget.TwoWayView
                android:id="@+id/lsvOffers"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_list_offer_height"
                android:orientation="horizontal" />
        </LinearLayout>
    </LinearLayout>

