<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_layout_bottom_height"
        android:background="@color/primary_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/app_button_top_width_height1"
            android:layout_height="@dimen/app_button_top_width_height1"
            android:layout_marginLeft="@dimen/app_margin_small"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/lblShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin_small"
            android:text="@string/orderDetails"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_normal_size"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_background_02" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_margin_top_bottom"
                android:layout_marginLeft="@dimen/dialog_margin_left_right"
                android:layout_marginRight="@dimen/dialog_margin_left_right"
                android:layout_marginTop="@dimen/dialog_margin_left_right"
                android:background="@drawable/bg_white_edittext"
                android:hint="@string/mail"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="@dimen/app_margin"
                android:singleLine="true"
                android:textColor="@color/brown"
                android:textSize="@dimen/text_normal_size" />

            <EditText
                android:id="@+id/txtFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_margin_top_bottom"
                android:layout_marginLeft="@dimen/dialog_margin_left_right"
                android:layout_marginRight="@dimen/dialog_margin_left_right"
                android:background="@drawable/bg_white_edittext"
                android:ems="10"
                android:hint="@string/fullName"
                android:imeOptions="actionNext"
                android:padding="@dimen/app_margin"
                android:singleLine="true"
                android:textColor="@color/brown"
                android:textSize="@dimen/text_normal_size" />

            <EditText
                android:id="@+id/txtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_margin_top_bottom"
                android:layout_marginLeft="@dimen/dialog_margin_left_right"
                android:layout_marginRight="@dimen/dialog_margin_left_right"
                android:background="@drawable/bg_white_edittext"
                android:ems="10"
                android:hint="@string/phone"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:padding="@dimen/app_margin"
                android:singleLine="true"
                android:textColor="@color/brown"
                android:textSize="@dimen/text_normal_size" />

            <EditText
                android:id="@+id/txtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_margin_top_bottom"
                android:layout_marginLeft="@dimen/dialog_margin_left_right"
                android:layout_marginRight="@dimen/dialog_margin_left_right"
                android:background="@drawable/bg_white_edittext"
                android:hint="@string/address"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:padding="@dimen/app_margin"
                android:textColor="@color/brown"
                android:textSize="@dimen/text_normal_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dialog_margin_left_right"
                android:layout_marginRight="@dimen/dialog_margin_left_right"
                android:orientation="horizontal" >

                <com.hcpt.multirestaurant.widget.AutoBgButton
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/btn_login_height"
                    android:layout_marginRight="@dimen/app_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="@string/cancel"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_normal_size"
                    android:textStyle="bold" />

                <com.hcpt.multirestaurant.widget.AutoBgButton
                    android:id="@+id/btnOk"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/btn_login_height"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:text="@string/Ok"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_normal_size"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/home/steven/Desktop/App%20Y%20/hicomsolutions.com_multirestaurants_android_php_src_20160301/multirestaurant/app/src/main/res/layout/dialog_details_order.xml -->