<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background_02"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_layout_bottom_height"
        android:background="@color/primary_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/app_button_top_width_height"
            android:layout_height="@dimen/app_button_top_width_height"
            android:layout_marginLeft="@dimen/app_margin_small"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/lblShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin_small"
            android:text="@string/myMenu"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_title_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ListView
            android:id="@+id/lsvShop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/app_margin"
            android:divider="@null"
            android:dividerHeight="0dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/app_margin"
        android:layout_marginLeft="@dimen/app_margin_large"
        android:layout_marginRight="@dimen/app_margin_large"
        android:background="@color/cl_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingBottom="@dimen/app_margin_small"
        android:paddingLeft="@dimen/app_margin_large"
        android:paddingRight="@dimen/app_margin_large" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lblVAT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="VAT"
                    android:textColor="@color/cl_white" />

                <TextView
                    android:id="@+id/lblShip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ship"
                    android:textColor="@color/cl_white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sum"
                    android:textColor="@color/cl_white"
                    android:textSize="@dimen/text_normal_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/text_normal_size" />
            </LinearLayout>
        </LinearLayout>

        <com.hcpt.multirestaurant.widget.AutoBgButton
            android:id="@+id/btnOrder"
            android:layout_width="@dimen/btn_login_width"
            android:layout_height="@dimen/app_button_top_width_height"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/bg_button"
            android:text="@string/order"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_normal_size" />
    </LinearLayout>

