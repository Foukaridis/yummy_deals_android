<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background_02"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_layout_bottom_height"
        android:background="@color/primary_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/app_button_top_width_height"
            android:layout_height="@dimen/app_button_top_width_height"
            android:layout_marginLeft="@dimen/app_margin_small"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin_small"
            android:text="@string/login"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_title_size"
            android:textStyle="bold" />
    </LinearLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/app_layout_bottom_height"
            android:layout_marginLeft="@dimen/app_margin_large"
            android:layout_marginRight="@dimen/app_margin_large"
            android:layout_marginTop="@dimen/app_layout_bottom_height"
            android:background="@drawable/bg_white_edittext"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/app_button_normal"
                android:layout_height="@dimen/app_button_normal"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/app_margin_small"
                android:src="@drawable/ic_nv" />

            <EditText
                android:id="@+id/txtUser"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_layout_bottom_height"
                android:layout_marginLeft="@dimen/app_margin"
                android:background="@drawable/ic_bgloginwhite"
                android:ems="10"
                android:hint="@string/userHint"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal_size" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/app_layout_bottom_height"
            android:layout_marginLeft="@dimen/app_margin_large"
            android:layout_marginRight="@dimen/app_margin_large"
            android:layout_marginTop="@dimen/app_margin"
            android:background="@drawable/bg_white_edittext"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/app_button_normal"
                android:layout_height="@dimen/app_button_normal"
                android:layout_marginLeft="@dimen/app_margin_small"
                android:src="@drawable/ic_key" />

            <EditText
                android:id="@+id/txtPassWord"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/app_margin"
                android:background="@drawable/ic_bgloginwhite"
                android:hint="@string/passHint"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal_size" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin_large"
            android:layout_marginRight="@dimen/app_margin_large"
            android:layout_marginTop="@dimen/app_margin"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btnLogin"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_login_height"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_normal_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnRegister"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_login_height"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:gravity="center"
                android:text="@string/register"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_normal_size"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin_large"
            android:layout_marginRight="@dimen/app_margin_large"
            android:layout_marginTop="@dimen/app_margin"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btnLoginFacebook"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_login_height"
                android:layout_weight="1"
                android:background="@drawable/bg_blue_button"
                android:gravity="center"
                android:text="@string/login_facebook"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_normal_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/home/steven/Desktop/App%20Y%20/hicomsolutions.com_multirestaurants_android_php_src_20160301/multirestaurant/app/src/main/res/layout/fragment_login.xml -->