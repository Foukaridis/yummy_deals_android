<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_backgroundnew" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_layout_bottom_height"
            android:background="@color/primary_dark"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="@dimen/app_button_top_width_height"
                android:layout_height="@dimen/app_button_top_width_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/app_margin"
                android:background="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/lblShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_margin_small"
                android:text="@string/account"
                android:textColor="@color/cl_white"
                android:textSize="@dimen/text_title_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/app_margin"
            android:background="@drawable/custom_layout_radius"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/btnMyAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imgMyAcc"
                        android:layout_width="@dimen/wh_image_account"
                        android:layout_height="@dimen/wh_image_account"
                        android:src="@drawable/ic_myaccnew" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_margin_large"
                        android:text="@string/myAccount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_normal_size" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:src="@drawable/ic_kengang" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnHistoryOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imgHistory"
                        android:layout_width="@dimen/wh_image_account"
                        android:layout_height="@dimen/wh_image_account"
                        android:src="@drawable/ic_historynew" />

                    <TextView
                        android:id="@+id/lblOrderHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_margin_large"
                        android:text="@string/history"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_normal_size" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:src="@drawable/ic_kengang" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnRegisterShopOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imgRegisterShopOwner"
                        android:layout_width="@dimen/wh_image_account"
                        android:layout_height="@dimen/wh_image_account"
                        android:src="@drawable/ic_register_shop_owner" />

                    <TextView
                        android:id="@+id/lblRegisterShopOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_margin_large"
                        android:text="@string/register_shop_owner"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_normal_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:src="@drawable/ic_kengang" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imgFeedBack"
                        android:layout_width="@dimen/wh_image_account"
                        android:layout_height="@dimen/wh_image_account"
                        android:src="@drawable/ic_fedbacknew" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_margin_large"
                        android:text="@string/feedBack"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_normal_size" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:src="@drawable/ic_kengang" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imgLogout"
                        android:layout_width="@dimen/wh_image_account"
                        android:layout_height="@dimen/wh_image_account"
                        android:src="@drawable/ic_logoutnew" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_margin_large"
                        android:text="Logout"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_normal_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout><!-- From: file:/home/steven/Desktop/App%20Y%20/hicomsolutions.com_multirestaurants_android_php_src_20160301/multirestaurant/app/src/main/res/layout/fragment_account.xml -->