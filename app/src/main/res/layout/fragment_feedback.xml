<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_backgroundnew"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_layout_bottom_height"
        android:background="@color/primary_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/app_button_top_width_height1"
            android:layout_height="@dimen/app_button_top_width_height1"
            android:layout_marginLeft="@dimen/app_margin_small"
            android:background="@drawable/ic_backs" />

        <TextView
            android:id="@+id/lblShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin_small"
            android:text="@string/feedBack"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_title_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/app_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_normal"
                android:text="@string/title"
                android:textColor="@color/cl_white"
                android:textSize="@dimen/text_normal_size" />

            <EditText
                android:id="@+id/edtTitleFB"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_button_top_width_height"
                android:background="@drawable/custom_layout_radius"
                android:ems="10"
                android:inputType="textMultiLine"
                android:paddingLeft="@dimen/margin_normal"
                android:paddingRight="@dimen/margin_normal" >

                <requestFocus />
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_normal"
                android:paddingTop="@dimen/margin_normal"
                android:text="@string/type"
                android:textColor="@color/cl_white"
                android:textSize="@dimen/text_normal_size" />

            <Spinner
                android:id="@+id/spnType"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_button_top_width_height"
                android:layout_weight="1.0"
                android:background="@drawable/bg_custom_spinner" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_normal"
                android:paddingTop="@dimen/margin_normal"
                android:text="@string/Des"
                android:textColor="@color/cl_white"
                android:textSize="@dimen/text_normal_size" />

            <EditText
                android:id="@+id/edtDesFB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_layout_radius"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:lines="6"
                android:padding="@dimen/app_margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:gravity="center" >

                <com.hcpt.multirestaurant.widget.AutoBgButton
                    android:id="@+id/btnSend"
                    android:layout_width="@dimen/btn_login_width1"
                    android:layout_height="@dimen/app_button_top_width_height"
                    android:layout_marginBottom="@dimen/app_margin"
                    android:layout_marginTop="@dimen/app_margin"
                    android:background="@drawable/bg_button"
                    android:text="@string/send"
                    android:textColor="@color/cl_white"
                    android:textSize="@dimen/text_normal_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>