<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background_02"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_layout_bottom_height"
        android:background="@color/primary_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/app_button_top_width_height"
            android:layout_height="@dimen/app_button_top_width_height"
            android:layout_marginLeft="@dimen/app_margin_small"
            android:padding="@dimen/app_margin_tiny"
            android:src="@drawable/ic_backs" />

        <TextView
            android:id="@+id/lblShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin_small"
            android:text="@string/orderDetails"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_normal_size"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/lsvShop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/app_margin"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/app_margin_large"
            android:layout_marginRight="@dimen/app_margin_large"
            android:background="@color/cl_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin_large"
            android:layout_marginRight="@dimen/app_margin_large"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginTop="@dimen/app_margin_small"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblVAT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="@string/vat"
                    android:textColor="@color/cl_white" />

                <TextView
                    android:id="@+id/lblShip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ship"
                    android:textColor="@color/cl_white" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/app_margin_small"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/lblSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/lblSumTitle"
                    android:layout_centerVertical="true"
                    android:text="300$"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/text_title_size"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>